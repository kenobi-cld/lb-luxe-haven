---
import "../styles/global.css";
import astroLogo from "../assets/logo.svg";
---

<nav
  id="header"
  class="fixed top-0 left-0 w-full z-50 grotesk bg-transparent"
>
  <div class="flex items-center gap-4 justify-between md:justify-center md:backdrop-blur-none backdrop-blur-sm px-4 py-4 max-w-7xl mx-auto">
    <a href="/">
      <img src={astroLogo.src} class="size-12" fetchpriority="high" />
    </a>

    <div
      class="hidden md:flex gap-8 border px-4 py-2 rounded font-semibold bg-white/20 backdrop-blur-sm"
    >
      <a href="/about">About</a>
      <a href="/services">Services</a>
      <a href="/projects">Projects</a>
      <!-- <a href="/certifications">Certifications</a> -->
      <a href="/contact">Contact</a>
    </div>

    <button
      id="menu-btn"
      class="md:hidden flex flex-col gap-1.5"
      aria-label="Toggle menu"
    >
      <span class="w-6 h-0.5 bg-black"></span>
      <span class="w-6 h-0.5 bg-black"></span>
      <span class="w-6 h-0.5 bg-black"></span>
    </button>
  </div>

<div
  id="mobile-menu"
  class="hidden md:hidden flex flex-col gap-6 px-6 py-6 backdrop-blur-sm border-t"
>
    <a href="/about">About</a>
    <a href="/services">Services</a>
    <a href="/projects">Projects</a>
    <!-- <a href="/certifications">Certifications</a> -->
    <a href="/contact">Contact</a>
  </div>
</nav>

<script>
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("mobile-menu");
  const links = menu?.querySelectorAll("a");

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });

  links?.forEach((link) => {
    link.addEventListener("click", () => {
      menu?.classList.add("hidden");
    });
  });
</script>
<script type="module">
  import "/src/scripts/heroIntro.js";
  import "/src/scripts/scrollReveal.js";
  import "/src/scripts/textReveal.js";
</script>
