<div id="project-modal"
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black/40 backdrop-blur-sm"
  aria-hidden="true">
  <div class="modal-main bg-white overflow-y-auto max-h-[90vh] rounded-xl max-w-3xl w-full p-2 relative scrollbar-hide">
    <button id="modal-close" class="absolute top-4 right-4 z-10" aria-label="Close modal">
      <i class="ti ti-x text-3xl block cursor-pointer rounded text-white"></i>
    </button>

    <div id="modal-carousel" class="carousel relative w-full overflow-hidden mb-4">
      <div class="carousel-inner flex transition-transform duration-300">
      </div>
      <button class="carousel-btn aspect-square left absolute top-1/2 -translate-y-1/2 left-2 text-white p-2 rounded">
        <i class="ti ti-chevron-left text-3xl block cursor-pointer rounded text-white"></i>
      </button>
      <button class="carousel-btn aspect-square right absolute top-1/2 -translate-y-1/2 right-2 text-white p-2 rounded">
        <i class="ti ti-chevron-right text-3xl block cursor-pointer rounded text-white"></i>
      </button>
    </div>


    <div class="p-4">
      <h2 id="modal-title" class="mona text-2xl font-bold leading-none"></h2>
      <p id="modal-location" class="text-sm text-gray-600 mb-2"></p>
      <p id="modal-category" class="text-sm text-gray-600 mb-1 font-bold"></p>
      <p id="modal-overview" class="text-sm text-gray-700 mb-4 mt-3"></p>

      <ul id="modal-scope" class="grotesk list-disc list-inside text-sm text-gray-700 mb-4"></ul>
      <p id="modal-outcome" class="text-sm font-medium text-gray-800"></p>
    </div>
  </div>
</div>